{{! views/partials/cubiculos.hbs }}
<div class="p-3 bg-light rounded shadow-sm">
  <h5>Seleccione un cubículo disponible:</h5>
  <div class="cubiculos d-flex flex-wrap justify-content-center mt-3">
    {{! Generación dinámica de cubículos }}
    {{#each cubiculos}}
      <div
        class="cubiculo {{estado}}"
        data-cubiculo="{{id}}"
        data-hora="{{hora}}"
        onclick="seleccionarCubiculo('{{id}}', '{{hora}}')"
      >
        <img src="/images/cubiculo-{{estado}}.png" alt="{{estado}}" />
      </div>
    {{/each}}
  </div>
  <div class="d-flex justify-content-center mt-4">
    <div class="me-3 d-flex align-items-center">
      <img
        src="/images/cubiculo-disponible.png"
        alt="Disponible"
        style="width: 20px;"
      />
      <span class="ms-2">Disponible</span>
    </div>
    <div class="d-flex align-items-center">
      <img
        src="/images/cubiculo-ocupado.png"
        alt="Ocupado"
        style="width: 20px;"
      />
      <span class="ms-2">Ocupado</span>
    </div>
  </div>
</div>