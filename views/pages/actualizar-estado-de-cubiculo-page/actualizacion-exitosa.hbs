{{!-- views/pages/actualizar-estado-de-cubiculo-page/actualizacion-exitosa.hbs --}}
{{#*inline "styles"}}
<link rel="stylesheet" href="/css/pages/actualizacion-exitosa.css">
{{/inline}}

{{> styles}}

<div class="container actualizacion-exitosa">
    <div class="row justify-content-center mt-5">
        <div class="col-12 text-center">
            <h2 class="title">ACTUALIZACIÓN EXITOSA!</h2>
            <p>Hora de Reserva: {{horaReserva}}</p>
            <p>Estado: {{estado}}</p>
            <p>Número de Cubículo: {{cubiculo}}</p>
            <button class="btn btn-primary btn-lg mt-3" onclick="aceptarActualizacion()">Aceptar</button>
        </div>
    </div>
</div>

<script>
function aceptarActualizacion() {
    window.location.href = "/actualizar-estado-de-cubiculo";
}
</script>
