{{#*inline "styles"}}
<link rel="stylesheet" href="/css/pages/seleccion-usuario.css">
<link rel="stylesheet" href="/css/pages/inicio-docente.css">
{{/inline}}

{{>styles}}

<div class="container seleccion-usuario">
  <div class="row justify-content-center mt-5">
    <div class="col-12 text-center">
      <h2 class="title">SELECCIONAR TIPO DE USUARIO</h2>
    </div>
  </div>
  <div class="row justify-content-center">
    <div class="col-12 text-center">
      <div class="usuarios">
        <div class="usuario">
          <div class="image">
            <img src="images/docente.jpg" alt="Docente">
          </div>
          <button onclick="location.href='/login/docente'" class="btn btn-primary btn-lg mb-3">Docente</button>
        </div>
        <div class="usuario">
          <div class="image">
            <img src="images/estudiante.jpg" alt="Estudiante">
          </div>
          <button onclick="location.href='/login/estudiante'" class="btn btn-primary btn-lg mb-3">Estudiante</button>
        </div>
        <div class="usuario">
          <div class="image">
            <img src="images/personalapoyo.jpg" alt="Personal de Apoyo">
          </div>
          <button onclick="location.href='/login/personal'" class="btn btn-primary btn-lg">Personal de Apoyo</button>
        </div>
        <!-- IMPLEMENTAR PARA ADMINISTRADOR -->
        <div class="usuario">
          <div class="image">
            <img src="images/administrador.jpg" alt="Administrador">
          </div>
          <button onclick="location.href='/login/administrador'" class="btn btn-primary btn-lg">Administrador</button>
        </div>

      </div>
    </div>    
  </div>
</div>